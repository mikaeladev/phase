{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun run build:bot",
    "watchPatterns": [
      "/apps/bot",
      "/packages/**",
      "/scripts/**",
      ".env.production",
      "bun.lock",
      "bunfig.toml",
      "package.json",
      "railway.json",
      "turbo.json"
    ]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyMaxRetries": 10,
    "restartPolicyType": "ALWAYS",
    "startCommand": "bun run start:bot"
  }
}
