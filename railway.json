{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "watchPatterns": ["/apps/bot", "/packages/**"]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyMaxRetries": 10,
    "restartPolicyType": "ALWAYS"
  }
}
