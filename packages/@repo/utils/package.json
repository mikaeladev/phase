{
  "private": true,
  "name": "@repo/utils",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "SKIP_ENV_VALIDATION=true eslint ."
  },
  "exports": {
    "./discord": {
      "types": "./dist/discord.d.ts",
      "default": "./dist/discord.js"
    },
    "./modules": {
      "types": "./dist/modules/index.d.ts",
      "default": "./dist/modules/index.js"
    },
    "./ms": {
      "types": "./dist/ms.d.ts",
      "default": "./dist/ms.js"
    },
    "./site": {
      "types": "./dist/site.d.ts",
      "default": "./dist/site.js"
    }
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "@repo/zod": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ms": "^2.1.3",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/ms": "^2.1.0"
  },
  "peerDependencies": {
    "discord.js": "^14.18.0"
  },
  "tsup": {
    "clean": true,
    "dts": true,
    "minify": true,
    "splitting": true,
    "sourcemap": true,
    "format": "esm",
    "entry": [
      "./src/*.ts",
      "./src/*/index.ts"
    ]
  }
}
