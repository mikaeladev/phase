{
  "private": true,
  "name": "@repo/utils",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint ."
  },
  "exports": {
    "./site": {
      "types": "./dist/site.d.ts",
      "default": "./dist/site.js"
    },
    "./modules": {
      "types": "./dist/modules/index.d.ts",
      "default": "./dist/modules/index.js"
    },
    "./zod": {
      "types": "./dist/zod.d.ts",
      "default": "./dist/zod.js"
    }
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "discord.js": "^14.18.0"
  },
  "tsup": {
    "clean": true,
    "dts": true,
    "minify": true,
    "splitting": true,
    "sourcemap": true,
    "format": "esm",
    "entry": [
      "./src/*.ts",
      "./src/*/index.ts"
    ]
  }
}
