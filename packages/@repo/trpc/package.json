{
  "private": true,
  "name": "@repo/trpc",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint ."
  },
  "exports": {
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.js"
    }
  },
  "dependencies": {
    "@repo/env": "workspace:*",
    "@repo/utils": "workspace:*",
    "@trpc/client": "^11.0.4",
    "@trpc/server": "^11.0.4"
  },
  "devDependencies": {
    "@repo/db": "workspace:*"
  },
  "peerDependencies": {
    "discord.js": "^14.18.0",
    "mongoose": "^8.13.2"
  },
  "tsup": {
    "clean": true,
    "dts": true,
    "minify": true,
    "splitting": false,
    "sourcemap": true,
    "format": "esm",
    "entry": [
      "./src/client/index.ts",
      "./src/server/index.ts"
    ]
  }
}
