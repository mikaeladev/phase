{
  "private": true,
  "name": "@repo/form",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "SKIP_ENV_VALIDATION=true eslint ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@repo/utils": "workspace:*"
  },
  "tsup": {
    "clean": true,
    "dts": true,
    "minify": true,
    "splitting": true,
    "sourcemap": true,
    "format": "esm",
    "entry": [
      "./src/index.ts"
    ]
  }
}
