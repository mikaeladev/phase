{
  "$schema": "https://schema.railpack.com",
  "buildAptPackages": ["build-essential", "python3"],
  "provider": "node",
  "steps": {
    "check": {
      "commands": ["bunx ls"]
    },
    "install": {
      "commands": ["bun install"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["...", "bun run build:bot"]
    }
  },
  "deploy": {
    "startCommand": "bun run start:bot"
  }
}
